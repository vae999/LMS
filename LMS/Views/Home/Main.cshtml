
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Main</title>
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>

    <script>
        $(function () {
            $("#add").click(function () {
                alert("wqd");
            });
            $("a").click(function () {
                alert("del");
            });
            $("#mtf").click(function () {
                alert("mtf");
            });
        });
    </script>
    <style>
        body{
            background-color: #C7EDCC;
        }
        div{
            background-color: #C7EDCC;
        }
     
    </style>
</head>

<body>  
    <div class="easyui-layout" style="width:100%;height:600px;">
        <div data-options="region:'north'" style="height:50px;text-align:center;font-size:30px">图书管理系统</div>
        <div data-options="region:'south',split:true" style="height:50px;"></div>
        <div data-options="region:'east',split:true" title="管理" style="width:200px;background-color:#C7EDCC;"></div>
        <div data-options="region:'west',split:true" title="书籍类别" style="width:200px;">
            <ul class="easyui-datalist"   lines="true"style="width:200px;height:600px">
                <li value="AL">哲学类</li>
                <li value="AK">小说类</li>
                <li value="AZ">文学类</li>
                <li value="AR">传记</li>
                <li value="CA">艺术类</li>
                <li value="CO">童书</li>
                <li value="CT">经济类</li>
                <li value="DE">历史类</li>
                <li value="FL">文化类</li>
                <li value="GA">进口原版</li>
                <li value="HI">教材教辅</li>
                <li value="ID">体育类</li>
                <li value="IL">科普类</li>
            </ul>
        </div>
        <div data-options="region:'center',title:'书籍',iconCls:'icon-ok'">
            <table class="easyui-datagrid"
                   data-options="url:'datagrid_data1.json',method:'get',border:false,singleSelect:true,fit:true,fitColumns:true">
                <thead>
                    <tr>
                        <th data-options="field:'itemid'"style="width:15px;" id="bookname">书名</th>
                        <th data-options="field:'productid'" style="width:15px;" id="author">作者</th>
                        <th data-options="field:'listprice',align:'center'" style="width:30px;" id="booknum">图书编号</th>
                        <th data-options="field:'unitcost',align:'center'" style="width:20px;" id="ISBN">ISBN</th>
                        <th data-options="field:'attr1'" style="width:20px;"id="press">出版社</th>
                        <th data-options="field:'status'" id="count"style="width:30px;">数量</th>
                        <th data-options="field:'stastus'" style="width:30px;">按钮</th>
                    </tr>
                  
                </thead>
                @foreach(var t in ViewData["dt"]as int[])
                {
                    <tr>
                        <td>@t</td>
                        <td>@t</td>
                        <td>@t</td>
                        <td>@t</td>
                        <td>@t</td>
                        <td>@t</td>
                        <td>
                            <a href="#" id="del">删除</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div style="font-size:100px;width:auto;height:100px;text-align:center;">
        关于我们
    </div>
</body>
</html>
